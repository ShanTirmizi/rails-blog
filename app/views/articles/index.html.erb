<h1>Articles</h1>
<table>
  <tr>
    <th>Title</th>
    <th>Description</th>
    <th>Show</th>
    <th>Edit</th>
    <th>Delete</th>
  </tr>
<% @articles.map do |article|%>
  <tr>
    <td><%= article.title %></td>
    <td><%= article.description %></td>
    <td> <%= link_to 'Show', article %> </td>
    <td> <%= link_to 'Edit', edit_article_path(article) %> </td>
    <%# Create a td to delete the article %>
    <td> <%= link_to 'Delete', article, method: :delete, data: { confirm: 'Are you sure?' } %> </td>

  </tr>
<% end %>
</table>
<p><%= link_to 'Create Articles', new_article_path %></p>
